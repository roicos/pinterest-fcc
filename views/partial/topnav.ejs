<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <ul class="nav">
            <li role="presentation" class="active navbar-left"><a href="/">Home</a></li>
            <%if (locals.userid != undefined) { %>
                <li role="presentation" class="navbar-left"><a href="/pins">My pins</a></li>
                <li role="presentation" class="navbar-left"><a href="/favorites">Favorites</a></li>
            <% } %>
            <%if (locals.userid != undefined) { %>
                <li role="presentation" id="logout" class="navbar-right text-center"><%=locals.username%> <a href="/logout">Logout</a></li>
            <% } else { %>
                <li role="presentation" class="navbar-right"><a href="/" onclick="loginUser()">Login</a></li>
            <%}%>
        </ul>
    </div>
</nav>
<script>
function loginUser(){
        $.post("login",
        function(data, status){
                window.location.href = data.link;
        }).fail(function(data, status) {
                $("#message").text(data.message);
        });
        return false;
}
</script>
