<% include partial/header %>

<% if(mode == "personal"){%>
        <div class="row text-right">
                <div class="col-sm-12"><button class="btn" data-toggle="modal" data-target="#addPictModal">Add new picture</button></div>
        </div>
<%}%>

<div class="grid">
        <%for(var i=0; i<pictures.length; i++){%>
                <div class="grid-item text-center">
                        <img src="<%=pictures[i].link%>" alt="<%=pictures[i].description%>" width="200"/>
                        <h4><%=pictures[i].description%></h4>
                        <% if(mode == "personal"){%>
                                <i class="deletePicture far fa-trash-alt" id="delete-<%=pictures[i].id%>" onclick="deletePicture(this, <%=pictures[i].id%>)"></i>
                        <%}%>
                        <span class="likes">
                                <span class="value"><%=pictures[i].likes%></span>
                                <% if(pictures[i].userlikes == false){%>
                                        <i class="far fa-heart like" id="like-<%=pictures[i].id%>" onclick="like(this, <%=pictures[i].id%>)"></i>
                                <%} else {%>
                                        <i class="fas fa-heart unlike" id="unlike-<%=pictures[i].id%>" onclick="unlike(this, <%=pictures[i].id%>)"></i>
                                <%}%>
                        </span>
                </div>
        <%}%>
</div>

<script>
  $(document).ready(function(){
    $('.grid').masonry({
      /*columnWidth: 16,*/
      gutter: 5,
      itemSelector: '.grid-item'
    });
  });

  function deletePicture(e, id) {
      var picture = $(e).parent();
      $.post("delete",
      {
          pictureid : id
      },
      function(data, status){
          picture.remove();
      }).fail(function(data, status) {
          $("#message").text(data.message);
      });
  };


  function like(e, id){
      var likeButton = $(e);
      $.post("like",
      {
          pictureid : id
      },
      function(data, status){
          var likes = + likeButton.prev().text();
          $(likeButton.prev().text(1+likes));
          likeButton.replaceWith('<i class="fas fa-heart unlike" id="unlike-' + id + '" onclick="unlike(this, ' + id + ')"></i>');
      }).fail(function(data, status) {
          $("#message").text(data.message);
      });
  };

  function unlike(e, id){
      var unlikeButton = $(e);
      $.post("unlike",
      {
          pictureid : id
      },
      function(data, status){
          var likes = + unlikeButton.prev().text();
          $(unlikeButton.prev().text(1-likes));
          unlikeButton.replaceWith('<i class="far fa-heart like" id="like-' + id + '" onclick="like(this, ' + id + ')"></i>');
      }).fail(function(data, status) {
          $("#message").text(data.message);
      });
  };
</script>

<% include partial/footer %>
<% if(mode == "personal"){%>
        <% include partial/modal %>
<%}%>
